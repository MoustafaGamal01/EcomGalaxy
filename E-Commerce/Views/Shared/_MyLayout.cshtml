@inject UserManager<ApplicationUser> UserManager

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - EcomGalaxy</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <style>
        body {
            margin: 0;
            font-family: Gotham, sans-serif;
            display: flex;
            flex-direction: column;
            min-height: 100vh;
        }

        .navbar {
            display: flex;
            justify-content: space-between;
            align-items: center;
            background-color: #1e1e1e;
            padding: 10px 20px;
            width:98%;
            position:fixed;
            z-index: 1000;
        }

        .logo {
            display: flex;
            align-items: center;
        }

            .logo img {
                height: 30px;
                margin-right: 10px;
            }

            .logo span {
                font-size: 20px;
                font-weight: bold;
                color: white;
                letter-spacing: 2px;
            }

        .nav-links {
            list-style: none;
            display: flex;
            gap: 20px;
            margin: 0;
            margin-left:70px;
            padding: 0;
        }

            .nav-links li a {
                text-decoration: none;
                color: white;
                font-size: 15px;
                font-weight: bold;
            }

                .nav-links li a:hover,
                .AddPrd:hover,
                .Home-page:hover,
                .Addcat:hover,
                .AddRoke:hover,
                .About-us:hover,
                .ShopPrd:hover,
                .AddUser:hover{
                    color: orange;
                }

        .cart {
            display: flex;
            align-items: center;
            position: relative;
        }

            .cart a {
                color: white;
                font-size: 15px;
                font-weight: bold;
                margin-right: 5px;
                margin-left: 5px;
            }

                .cart a:hover {
                    color: orange;
                }

            .cart img {
                height: 30px;
                margin: 0 30px;
            }

        .cart-count {
            position: absolute;
            top: -5px;
            right: 0px;
            background-color: darkorange;
            color: #ffff;
            border-radius: 50%;
            padding: 3px 6px;
            font-size: 10px;
            font-weight: bold;
            margin: 0 33px;
        }

        footer {
            background-color: #1e1e1e;
            color: #fff;
            padding: 20px 0;
            text-align: center;
            display: flex;
            justify-content: space-between;
            flex-wrap: wrap;
            width: 100%;
            margin-top: auto;
        }

        .footer-section {
            margin: 5px;
            flex: 1;
            min-width: 200px;
        }

            .footer-section h4 {
                margin-bottom: 10px;
                font-size: 18px;
                text-transform: uppercase;
            }

            .footer-section p, .footer-section ul, .footer-section form {
                margin: 0;
                padding: 0;
                list-style: none;
            }

            .footer-section a {
                color: #fff;
                text-decoration: none;
            }

                .footer-section a:hover {
                    text-decoration: underline;
                }

            .footer-section form input[type="email"] {
                padding: 8px;
                width: 80%;
                margin: 10px 0;
                border: none;
                border-radius: 5px;
            }

            .footer-section form button {
                padding: 8px 20px;
                border: none;
                border-radius: 5px;
                background-color: darkorange;
                color: #000;
                cursor: pointer;
            }

                .footer-section form button:hover {
                    background-color: darkorange;
                }

        html, body {
            height: 100%;
            margin: 0;
        }

        .wrapper {
            display: flex;
            flex-direction: column;
            min-height: 100vh;
        }

        main {
            flex: 1;
        }
        
        .social-links li {
            display: inline-block;
            margin: 0 5px;
        }

            .social-links li a {
                font-size: 20px;
                color: white; 
                text-decoration: none;
            }

                .social-links li a:hover {
                    color: darkorange; 
                }
    </style>
</head>
<body>
    <div class="wrapper">
        <nav class="navbar">
            <div class="logo">
                <span>EcomGalaxy</span>
            </div>
             @if (User.Identity.IsAuthenticated == true)
			 {
                <ul class="nav-links">
                    @if (User.IsInRole("Admin") == true)
                    {
                        <li class="Home-page"><a href="/Home/Index/">Home</a></li>
                        <li class="AddRole"><a href="/Role/AddRole">Add Role</a></li>
                        <li class="AddUser"><a href="/Account/AddUserForm">Add User</a></li>
                        @* <li class="AddPrd"><a href="/Product/ManageProducts">Manage Products</a></li> *@
                        <li class="Addcat"><a href="/Category/ManageCategories">Manage Categories</a></li>
                    }
                    else
                    {
                        if (User.IsInRole("Seller") == true)
                        {
                            <li class="Home-page"><a href="/Product/ProductsForSeller/">Home</a></li>
                        }
                        else
                        {
                            <li class="Home-page"><a href="/Home/Index/">Home</a></li>
                            <li class="About-us"><a href="#">About</a></li>
                            <li class="ShopPrd"><a href="/Product/Index/">Shop</a></li>
                            <li class="contact-info"><a href="#contact-info">Contact</a></li>
                        }
                    }
                </ul>
             } 

            <div class="cart">
                @if (User.Identity.IsAuthenticated == true)
                {
                    <a href="/Account/Profile">Welcome @UserManager.GetUserAsync(User).Result.Name </a>
                    <a href="/Account/Logout">Logout</a>
                }
                else
                {
                    <a href="/Account/LoginForm">Login</a>
                    <a href="/Account/RegisterForm">Register</a>
                }
                @if (User.Identity.IsAuthenticated == true)
                {
                    if (User.IsInRole("Customer") == true){
                    <a href="/cart">
                        <img src="/images/cart.png" alt="Cart">
                        <span class="cart-count">2</span>
                    </a>
                    }
                }
            </div>
        </nav>

        <main>
            @RenderBody()
        </main>

        <footer>
            <div class="footer-section">
                <h4>Policies</h4>
                <ul>
                    <li><a href="#privacy-policy">Privacy Policy</a></li>
                    <li><a href="#terms-of-service">Terms of Service</a></li>
                    <li><a href="#cookie-policy">Cookie Policy</a></li>
                </ul>
            </div>

            <div class="footer-section">
                <h4>Follow Us</h4>
                <ul class="social-links">
                    <li><a href="[Facebook URL]" class="fab fa-facebook-f"></a></li>
                    <li><a href="[Twitter URL]" class="fab fa-twitter"></a></li>
                    <li><a href="[Instagram URL]" class="fab fa-instagram"></a></li>
                    <li><a href="[Pinterest URL]" class="fab fa-pinterest-p"></a></li>
                </ul>
            </div>

            <div class="footer-section" id="contact-info">
                <h4>Contact Us</h4>
                <div class="contact-info">
                    <p><i class="fas fa-envelope"></i> <a href="mailto:Moustafa.gamal672@gmail.com">Moustafa.gamal672@gmail.com</a></p>
                    <p><i class="fas fa-phone"></i> <a href="tel:+201156675082">+201156675082</a></p>
                    <p><i class="fas fa-map-marker-alt"></i> Cairo, Egypt</p>
                </div>
            </div>
        </footer>
    </div>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
