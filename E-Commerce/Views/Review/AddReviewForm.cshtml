@model AddReviewViewModel

<!DOCTYPE html>
<html>
<head>
	<style>
		.container {
			padding: 70px;
			max-width: 600px;
			margin: auto;
		}

		.body {
			background: #f1f2f7;
		}

		.card {
			box-shadow: 0 2px 6px rgba(0, 0, 0, 0.2);
			border-radius: 10px;
			background-color: #fff;
			padding: 20px;
			margin: 20px 0;
		}

			.card h2 {
				margin-bottom: 20px;
				color: #001f3f;
				font-size: 24px;
			}

		.form-group {
			margin-bottom: 15px;
		}

			.form-group label {
				display: block;
				margin-bottom: 5px;
				color: #001f3f;
				font-weight: bold;
			}

			.form-group input,
			.form-group select {
				width: 96%;
				padding: 10px;
				border: 1px solid #ddd;
				border-radius: 5px;
			}

				.form-group input:focus,
				.form-group select:focus {
					border-color: #001f3f;
					outline: none;
				}

			.form-group .text-danger {
				color: #ff0000;
				font-size: 0.875em;
			}

		.btn-submit {
			background-color: #001f3f;
			color: #fff;
			border: none;
			padding: 10px 20px;
			border-radius: 5px;
			cursor: pointer;
			font-size: 16px;
		}

			.btn-submit:hover {
				background-color: #4580b5;
			}
	</style>
</head>
<body>
	<div class="container">
		<div class="card">
			<h2>Add Review</h2>
			<form method="post" asp-action="AddReview" asp-controller="Review">
				<div class="form-group">
					<input type="hidden" name="userId" value="@Model.UserId" />
				</div>
				<div class="form-group">
					<input type="hidden" name="productId" value="@Model.ProductId"/>
				</div>
				<div class="form-group">
					<label asp-for="Message">Your Review</label>
					<input asp-for="Message" class="form-control" />
					<span asp-validation-for="Message" class="text-danger"></span>
				</div>
				<div class="form-group">
					<label asp-for="Rating">Rate This Item</label>
					<select asp-for="Rating" class="form-control">
					<option value="-1">-- Select Rating --</option>
						<option value="1">1 star</option>
						<option value="2">2 stars</option>
						<option value="3">3 stars</option>
						<option value="4">4 stars</option>
						<option value="5">5 stars</option>
					</select>
					<span asp-validation-for="Rating" class="text-danger"></span>
				</div>
				<button type="submit" class="btn-submit">Add Review</button>
			</form>
		</div>
	</div>
</body>
</html>
