<!DOCTYPE html>
<html>
<head>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <style>
        body {
            font-family: Gotham, sans-serif;
            margin: 0;
            padding: 0;
            background: #f1f2f7;
        }

        .search-container {
            display: flex;
            justify-content: center;
            padding: 20px;
            background-color: #f5f5f5; /* Light background for search bar area */
            margin-top: 0px; /* Add space below the fixed navbar */
        }

        .search-bar {
            display: flex;
            align-items: center;
            width: 100%;
            max-width: 800px; /* Adjusted max-width for the search bar */
            border-radius: 5px;
            overflow: hidden;
        }

        .search-input {
            flex: 1;
            padding: 10px;
            border: 1px solid #ccc;
            border-radius: 5px 0 0 5px;
            font-size: 16px;
        }

        .search-button,
        .btn-check {
            background-color: darkorange;
            border: none;
            padding: 11px;
            color: white;
            cursor: pointer;
            font-size: 16px;
            display: flex;
            align-items: center;
            justify-content: center;
        }

        .search-button {
            border-radius: 0 5px 5px 0;
        }

        .btn-check {
            border-radius: 5px;
            margin-left: 10px; /* Space between buttons */
            text-decoration: none; /* Remove underline from the button */
        }

        .search-button i {
            font-size: 18px;
        }


        .container {
            display: flex;
            justify-content: center;
            flex-wrap: wrap;
            padding: 20px;
        }

        .card {
            border-radius: 10px;
            box-shadow: 0 2px 6px 0 rgba(0, 0, 0, 0.2);
            width: 300px;
            height: 410px;
            margin: 5px;
            text-align: center;
            font-family: Gotham;
            position: relative;
            overflow: hidden;
            text-decoration: none;
            color: inherit;
            display: block;
            transition: box-shadow 0.3s ease;
        }

        .card:hover {
            box-shadow: 0 4px 12px 0 rgba(0, 0, 0, 0.3);
        }

        .image-container {
            position: relative;
            width: 100%;
            height: 250px; /* Fixed height */
            overflow: hidden;
        }

        .product-image {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            object-fit: cover;
            transition: opacity 0.5s ease;
            opacity: 1;
        }

        .price {
            color: grey;
            font-size: 22px;
            margin: 10px 0;
        }

        .card h1 {
            font-size: 24px;
            color: black;
            margin: 10px 0;
        }

        .card p {
            margin: 0 0 10px 0;
        }

        .card button {
            border: none;
            outline: 0;
            padding: 12px;
            color: white;
            background-color: darkorange;
            text-align: center;
            cursor: pointer;
            width: 100%;
            font-size: 18px;
            margin: 10px 0; /* Add margin if needed */
        }

        .card button:hover {
            opacity: 0.7;
        }

        .card-link, .button-link {
            text-decoration: none;
            color: inherit;
            display: block;
        }
    </style>
</head>
<body>
    <div class="search-container">
        <div class="search-bar">
            <input type="text" id="search-input" class="search-input" placeholder="Search for products...">
            <button class="search-button">
                <i class="fas fa-search"></i>
            </button>
            <a href="/Product/AddProduct" class="btn-check">
                Add Product
            </a>
        </div>
    </div>
    <div class="container" id="product-container">
        @foreach (var product in Model)
        {
            <div class="card" data-name="@product.ProductName" data-description="@product.ProductDescription">
                <a href="/Product/ManageProductDetails/@product.ProductId" class="card-link">
                    <div class="image-container">
                        <img src="/images/@product.ProductImages[0]" alt="Product Image" class="product-image">
                    </div>
                    <h1>@product.ProductName</h1>
                    <p class="price">$@product.ProductPrice</p>
                    <p>@product.ProductDescription</p>
                </a>
                <a href="/Product/ManageProductDetails/@product.ProductId" class="button-link">
                    <button class="add-to-cart-button">Details</button>
                </a>
            </div>
        }
    </div>

    <script>
        document.getElementById('search-input').addEventListener('input', function () {
            const searchValue = this.value.toLowerCase();
            const products = document.querySelectorAll('.card');

            products.forEach(product => {
                const productName = product.getAttribute('data-name').toLowerCase();
                const productDescription = product.getAttribute('data-description').toLowerCase();

                if (productName.includes(searchValue) || productDescription.includes(searchValue) || searchValue === '') {
                    product.style.display = 'block';
                } else {
                    product.style.display = 'none';
                }
            });
        });
    </script>
</body>
</html>
