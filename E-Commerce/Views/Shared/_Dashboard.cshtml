<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <meta name="description" content="" />
    <meta name="author" content="" />
    <title>Admin Dashboard</title>
    <link href="~/css/styles.css" rel="stylesheet" />
    <script src="https://use.fontawesome.com/releases/v6.3.0/js/all.js" crossorigin="anonymous"></script>
    <style>
        *, *::before, *::after {
            box-sizing: border-box;
        }

        * {
            box-sizing: border-box;
        }

        body {
            font-family: Gotham-bold, Gotham;
            margin: 0;
            padding: 0;
        }

        .navbar {
            background-color: #001f3f;
            margin-bottom: 0; /* Ensure no space below navbar */
        }

        .navbar-brand, .nav-link {
            color: #ffffff !important;
        }

        .dropdown-item {
            color: #001f3f !important;
        }

        .nav-link:hover, .dropdown-item:hover {
            color: #4580b5 !important;
        }

        .search-bar {
            width: 100%;
            display: flex;
            justify-content: center;
            align-items: center;
        }

        .search-input {
            width: 50%;
            padding: 5px;
            border-radius: 5px;
            border: 1px solid #ccc;
        }

        .sb-sidenav {
            background-color: #001f3f;
        }

        .sb-sidenav .nav-link {
            color: #ffffff !important;
        }

        .sb-sidenav .nav-link:hover {
            background-color: #4580b5;
            color: #ffffff !important;
        }

        .sb-sidenav .sb-sidenav-menu {
            padding: 10px;
        }

        .container-fluid {
            padding: 20px;
        }

        .footer {
            background-color: #001f3f;
            color: #ff851b !important;
        }
    </style>
</head>
<body>
    <nav class="sb-topnav navbar navbar-expand navbar-dark">
        <a class="navbar-brand ps-3" href="">EcomGalaxy</a>
        <button class="btn btn-link btn-sm order-1 order-lg-0 me-4 me-lg-0" id="sidebarToggle" href="#!"><i class="fas fa-bars"></i></button>
        <div class="search-bar">
            <input type="text" class="search-input" placeholder="Search...">
        </div>
        <!--Add product button-->
        <a class="nav-link d-flex align-items-center ms-3" href="/Product/AddProduct" style="margin-right: 10px; text-align: center;">
            <i class="fas fa-plus"></i>
            <span class="ms-2">Add Product</span>
        </a>


        <!-- Cart button -->
        <a class="nav-link d-flex align-items-center ms-3" href="index.html" style="margin-right: 10px;">
            <i class="fas fa-shopping-cart"></i>
            <span class="ms-2">MyCart</span>
        </a>

        <ul class="navbar-nav ms-auto ms-md-0 me-3 me-lg-4">
            <li class="nav-item dropdown" style="margin-right: 10px;">
                <a class="nav-link dropdown-toggle" id="navbarDropdown" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                    <i class="fas fa-user fa-fw"></i>
                </a>
                <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="navbarDropdown">
                    <li><a class="dropdown-item" href="#!">Profile</a></li>
                    <li><hr class="dropdown-divider" /></li>
                    <li><a class="dropdown-item" href="#!">Logout</a></li>
                </ul>
            </li>
        </ul>
    </nav>
    <div id="layoutSidenav">
        <div id="layoutSidenav_nav">
            <nav class="sb-sidenav accordion sb-sidenav-light" id="sidenavAccordion">
                <div class="sb-sidenav-menu">
                    <div class="nav">
                        <a class="nav-link" href="/Product/Index">
                            <div class="sb-nav-link-icon"><i class="fas fa-home"></i></div>
                            Home
                        </a>
                        <a class="nav-link" href="index.html">
                            <div class="sb-nav-link-icon"><i class="fas fa-user"></i></div>
                            Profile
                        </a>
                        <a class="nav-link" href="index.html">
                            <div class="sb-nav-link-icon"><i class="fas fa-shopping-basket"></i></div>
                            Products
                        </a>
                        <a class="nav-link" href="index.html">
                            <div class="sb-nav-link-icon"><i class="fas fa-money-check"></i></div>
                            Orders
                        </a>
                    </div>
                </div>
            </nav>
        </div>
        <div id="layoutSidenav_content">
            <main>
                <div>
                    @RenderBody()
                </div>
            </main>
            <footer class="py-4 bg-light mt-auto footer">
                <div class="container-fluid px-4">
                    <div class="d-flex align-items-center justify-content-between small">
                        <!-- Footer content here -->
                    </div>
                </div>
            </footer>
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js" crossorigin="anonymous"></script>
    <script src="~/js/scripts.js"></script>
</body>
</html>
