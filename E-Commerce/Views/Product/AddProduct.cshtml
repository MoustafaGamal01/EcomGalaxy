@model AddProductViewModel

@{
	SelectList Categories = new SelectList(ViewBag.CategoriesList, "CategoryId", "Name");
}
<!DOCTYPE html>
<html>
<head>
	<style>
		.container {
			padding: 70px;
			max-width: 600px;
			margin: auto;
		}

		.body {
			background: #f1f2f7;
		}
		.card {
			box-shadow: 0 2px 6px rgba(0, 0, 0, 0.2);
			border-radius: 10px;
			background-color: #fff;
			padding: 20px;
			margin: 20px 0;
		}

			.card h2 {
				margin-bottom: 20px;
				color: #001f3f;
				font-size: 24px;
			}

		.form-group {
			margin-bottom: 15px;
		}

			.form-group label {
				display: block;
				margin-bottom: 5px;
				color: #001f3f;
				font-weight: bold;
			}

			.form-group input,
			.form-group select {
				width: 96%;
				padding: 10px;
				border: 1px solid #ddd;
				border-radius: 5px;
			}

				.form-group input:focus,
				.form-group select:focus {
					border-color: #001f3f;
					outline: none;
				}

			.form-group .text-danger {
				color: #ff0000;
				font-size: 0.875em;
			}

		.btn-submit {
			background-color: #001f3f;
			color: #fff;
			border: none;
			padding: 10px 20px;
			border-radius: 5px;
			cursor: pointer;
			font-size: 16px;
		}

			.btn-submit:hover {
				background-color: #4580b5;
			}
	</style>
</head>
<body>
	<div class="container">
		<div class="card">
			<h2>Add New Product</h2>
			<form method="post" asp-action="SaveProduct" asp-controller="Product">
				<div class="form-group">
					<label asp-for="Name"><strong>Name</strong></label>
					<input asp-for="Name" class="form-control" />
					<span asp-validation-for="Name" class="text-danger"></span>
				</div>

				<div class="form-group">
					<label asp-for="Description"><strong>Description</strong></label>
					<input asp-for="Description" class="form-control" />
					<span asp-validation-for="Description" class="text-danger"></span>
				</div>

				<div class="form-group">
					<label asp-for="Price"><strong>Price</strong></label>
					<input asp-for="Price" type="number" step="0.01" class="form-control" />
					<span asp-validation-for="Price" class="text-danger"></span>
				</div>

				<div class="form-group">
					<label asp-for="StockQuantity"><strong>Stock</strong></label>
					<input asp-for="StockQuantity" type="number" class="form-control" />
					<span asp-validation-for="StockQuantity" class="text-danger"></span>
				</div>
				
				<div class="form-group">
					<label><strong>Images</strong></label>
					<input asp-for="ProductImagePath" type="file" multiple class="form-control" />
				</div>

				<div class="form-group">
					<label asp-for="CategoryId"><strong>Category</strong></label>
					<select asp-for="CategoryId" class="form-control">
						<option value="-1">Select a category</option>
						@foreach (var category in ViewBag.CategoriesList)
						{
							<option value="@category.Id">@category.Name</option>
						}
					</select>
					<span asp-validation-for="CategoryId" class="text-danger"></span>
				</div>

				<button type="submit" class="btn-submit">Add Product</button>
			</form>
		</div>
	</div>
</body>
</html>
