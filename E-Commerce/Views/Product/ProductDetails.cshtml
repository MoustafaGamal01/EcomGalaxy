@model Product
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Product Page</title>
    <style>
        .product-view { *
        {
            box-sizing: border-box;
        }

        .body {
            background: #f1f2f7;
        }
        .card {
            width: 750px;
            height: 475px;
            background: white;
            margin: 170px auto; /* Center the card horizontally with some margin from top */
            box-shadow: 0 2px 5px 0 rgba(0,0,0,0.16), 0 2px 10px 0 rgba(0,0,0,0.12);
            transition: all 0.3s;
            position: relative; /* Needed for positioning arrows */
        }

        .card:hover {
            box-shadow: 0 8px 17px 0 rgba(0,0,0,0.2), 0 6px 20px 0 rgba(0,0,0,0.19);
        }

        .photo {
            padding: 70px;
            width: 45%;
            text-align: center;
            float: left;
            display: flex;
            align-items: center;
            justify-content: center;
            position: relative; /* Needed for positioning arrows */
        }

        .photo img {
            max-height: 260px;
            width: auto; /* Ensure image scales correctly */
            display: block; /* Ensures that margins are applied correctly */
        }

        .description {
            padding: 52px;
            float: left;
            width: 52%;
            /* border-left: 1px solid #efefef; */
        }

            .description h1 {
                color: #515151;
                font-weight: 500;
                padding-top: 15px;
                margin: 0;
                font-size: 30px;
            }

            .description h2 {
                color: #515151;
                margin: 0;
                text-transform: uppercase;
                font-weight: 500;
            }

            .description h4 {
                margin: 0;
                color: #727272;
                text-transform: uppercase;
                font-weight: 500;
                font-size: 12px;
            }

            .description p {
                font-size: 14px;
                line-height: 20px;
                color: #727272;
                padding: 20px 0;
                margin: 0;
            }

            .description button {
                outline: 0;
                border: 1px solid #d9d9d9;
                padding: 18px 0px;
                margin-bottom: 30px;
                color: #515151;
                text-transform: uppercase;
                width: 125px;
                font-family: inherit;
                margin-right: 5px;
                transition: all 0.3s ease;
                font-weight: 500;
                cursor: pointer;
                background: none;
                /* make it a abit curvy*/
                border-radius: 10px;
            }

            .description button:hover {
                border: 1px solid darkorange;
                color: darkorange;
            }

        .arrow {
            position: absolute;
            top: 50%;
            width: 25px;
            height:25px;
            background-color: rgba(0,0,0,0.5);
            color: white;
            border: none;
            cursor: pointer;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 20px;
            z-index: 10;
            transform: translateY(-50%);
        }

        .arrow-left {
            left: 10px;
        }

        .arrow-right {
            right: 10px;
        }
    </style>
</head>
<body>
    <div class="product-view">
        <div class="card">
            <div class="photo">
                <button class="arrow arrow-left" onclick="changeImage(-1)">&#9664;</button>
                <img id="productImage" src="/images/@Model.ProductImagePath[0]" alt="Product Image">
                <button class="arrow arrow-right" onclick="changeImage(1)">&#9654;</button>
            </div>
            <div class="description">
                <h2>@Model.Name</h2>
                @* <h4>@Model.Category.Name</h4> *@
                <h1>@Model.Price EGP</h1>
                <p>@Model.Description</p>
                <br>
                <button onclick="window.location.href='/Home/Index';">Add to Cart</button>
            </div>
        </div>
    </div>


    <script>
        // Array of image paths
        const images = @Html.Raw(Json.Serialize(Model.ProductImagePath));
        let currentIndex = 0;

        function changeImage(direction) {
            currentIndex = (currentIndex + direction + images.length) % images.length;
            document.getElementById('productImage').src = '/images/' + images[currentIndex];
        }
    </script>
</body>
</html>
